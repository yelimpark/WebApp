body {
	background-image : url("background.png");
	font-size : 8pt;
	font-family : "Verdana", "Tahoma", sans-serif;
	margin : 0;
	padding : 0;
}
	
.banner {
	text-align : center;
	height : 50px;
	background-image : url("bannerbg.png");
	height : 50px
}

h1 {
	text-align : center;
	font-weight: bold;
	font-size: 24pt;
	font-family : "Tahoma", "Verdana", sans-serif;
	text-shadow : 3px 3px #999999;
}

.contents {
	margin-left: auto;
  margin-right: auto;
	width : 800px;
	border : 4px solid gray;
	border-radius: 20px;
	overflow : hidden;
}

.left {
	width : 550px;
	float : left;
}

.rotten {
	background-image : url("rbg.png");
	font-weight : bold;
	font-size : 48pt;
	color : red;
	height : 83px;
}

.rotten img {
		vertical-align : bottom;
}

.quote {
	font-weight: bold;
	font-size: 8pt;
	background-color : #E8DC9B;
	border : 2px solid gray;
	border-radius: 10px;
	padding : 8px;
	overflow : hidden;
}

p > img {
	float : left;
	margin-right : 5px;
}

p:not(.quote):not(.page) {
	font-style : italic;
	overflow : hidden;
}

.right {
	float : right;
	width : 250px;
	background-color : #A2B964;
	font-size: 8pt;
	font-family : "Arial", sans-serif;
	font-weight: bold;
}

.page {
		background-color : #A2B964;
		padding : 5px;
		clear: right;
}

dd~dt {
	margin-top : 10pt;
}

ul {
	list-style-type: none;
}

.vali {
	opacity: 0.50;
}

p~p[class] {
	margin-top : 20pt;
}

.one{
	float : left;
	width : 47%;
	margin-left: 2%;
}
.two {
	width : 47%;
	float : right;
	margin-right:2%;
	margin-left: 2%;
}